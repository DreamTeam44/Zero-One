<p id="notice"><%= notice %></p>
<div class="card" style="width: 50rem;">
  <div class="card-body">
    <%= image_tag @question.user.avatar_thumbnail, class: 'rounded-circle'%>
    <br/><br/>
    <h5 class="card-title"><strong>العنوان:</strong>
      <%= @question.title %>
    </h5>
    <p class="card-text"><strong>المحتوى:<br/></strong>
      <%= @question.content %>
    </p>
    <%= link_to 'تعديل', edit_question_path(@question) %> |
    <%= link_to 'العودة', questions_path %>
   <p>كتبت بواسطة <%= @question.user.username %> </p>
    <div id='like-count'>
      <%=render 'questions/like', question: @question %>
    </div>

    <div id='like-link' class="btn btn-outline-success">
      <%=render 'questions/like_link', question: @question %>
    </div>

  </div>
</div>