<html dir="rtl">
<p id="notice"><%= notice %></p>
<div class="card" >
<div class="card-header">
<h1>قائمة الاسئلة</h1>
</div>
  <br/>
  <div class="card">
    <% @questions.each do |question| %>
  <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= question.title %></h5>
        <p class="card-text"><%= question.content %></p>
      </div>
      <div class="card-footer">
        <small class="text-muted">Last updated 3 mins ago</small>
        <td><%= link_to 'اظهار', question %></td>
        <td><%= link_to 'تعديل', edit_question_path(question) %></td>
        <td><%= link_to 'حذف', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </div>
      <br/>
<% end %>
  </div>
</div>
<br>

<%= link_to 'سؤال جديد', new_question_path, class:"btn btn-primary" %>
</html>
