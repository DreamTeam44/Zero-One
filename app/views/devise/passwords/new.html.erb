<html dir="rtl">
<br/>
<h2>نسيت كلمة المرور ؟ </h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br/>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"الايميل" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "ارسل ارشادات إعادة تعيين كلمة المرور" %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
</html>