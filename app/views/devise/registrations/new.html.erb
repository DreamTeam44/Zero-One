<html dir="rtl">
<br/>

<div class="card">
  <div class="card-header">
    <h4>للتسجيل</h4>
  </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="field">
          <%= image_tag (resource.avatar_thumbnail) %>
        </div>

        <div class="field">
          <% f.label :username %>
          <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "اسم المستخدم"%>
        </div>

        <br/>
        <div class="field form-group">
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder:" الايميل" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
          <% end %>
          <br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"كلمة المرور" %>
        </div>
        <br/>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"تأكيد كلمة المرور" %>
        </div>

        <br/>
        <div class="actions">
          <%= f.submit "تسجيل", class:"btn btn-primary" %>
        </div>
      <% end %>
      <br/>
    </div>
</div>
<br/>
<%= render "devise/shared/links" %>
</html>