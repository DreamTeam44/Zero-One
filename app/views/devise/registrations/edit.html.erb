<html dir="rtl" >
<br/>
<h2>اعدادات <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :الايميل %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<br/>
  <div class="field">
    <%= f.label :"كلمة المرور" %>
    <i>(اذا لا تريد تغيير كلمة المرور اتركها فارغة)</i>
    <br/>
    <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
    <% if @minimum_password_length %>
      <em>  الحد الادنى للأحرف<%= @minimum_password_length %> </em>
    <% end %>
  </div>
<br/>
  <div class="field">
    <%= f.label :"تأكيد كلمة المرور" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
<br/>
  <div class="field">
    <%= f.label :"كلمة المرور الحالية" %> <i>(يجب ادخالها لحفظ التغييرات)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <br/>
  <div class="actions">
    <%= f.submit "تحديث", class:"btn btn-outline-info" %>
  </div>
<% end %>

<br/>
<h3>حذف الحساب</h3>

<p>ما اعجبك الموقع؟ :"(<%= button_to "إلغاء الحساب", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %></p>

<%= link_to "Back", :back %>
</html>